<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:background="@drawable/comic_background"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_page_preview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_comic_placeholder"
        android:contentDescription="Ảnh trang truyện"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_page_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_edit_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="14sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_delete_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="14sp"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/white"/>
</LinearLayout>