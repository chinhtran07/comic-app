<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_comic_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comic Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <ImageButton
            android:id="@+id/btn_edit_comic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_edit_24"
            android:contentDescription="@string/edit_comic"
            app:tint="?android:attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/btn_delete_comic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="@string/delete_comic"
            app:tint="?android:attr/colorControlNormal" />

        <Button
            android:id="@+id/btn_view_chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Chapters"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
