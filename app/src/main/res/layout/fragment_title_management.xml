<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.title.TitleFragment">

    <!-- Search View -->
    <SearchView
        android:id="@+id/search_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:queryHint="Search Comics" />

    <!-- RecyclerView for Comics List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_comics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_comic"
        android:layout_above="@id/fab_add_comic"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_comic" />

    <!-- Floating Action Button to Add New Comic -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_comic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/design_default_color_primary" />
</RelativeLayout>
